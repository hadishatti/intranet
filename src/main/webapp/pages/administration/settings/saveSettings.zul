<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<?init class="qa.tecnositafgulf.init.AuthenticationInit"?>
<?init class="qa.tecnositafgulf.init.AdministratorInit"?>

<?page
        title="Add Setting" contentType="text/html;charset=UTF-8" ?>

<zk>
    <window
            apply="org.zkoss.bind.BindComposer"
            viewModel="@id('vm') @init('qa.tecnositafgulf.viewmodel.administration.settings.SaveSettingsViewModel')"
            height="100%" width="100%" style="padding: 0px;">
        <style>
            .z-button {
            background-color: #1a4280;
            }
            .z-button:hover {
            background-color: #0090cf;
            }
            .z-icon-angle-double-left {
            color: #1a4280;
            font-size:30px;
            }
            .z-west-collapsed>.z-borderlayout-icon {
            top: 0; bottom: 0; right: 0; left: 0;
            width: 100%; height: 100%;
            }
            .z-west-collapsed>.z-borderlayout-icon::before {
            color: #1a4280;
            font-size:30px;
            }
            .z-listheader {
            background-color: #1a4280;
            }
            .z-icon-calendar {
            color: #1a4280;
            }
        </style>

        <borderlayout  animationDisabled="true">

            <!-- Content Panel -->
            <center
                    id="contentPanel"
                    sclass="contentPanel"
                    border="0"
                    style="border: none;"
                    hflex="1">

                <!-- Content Area -->
                <borderlayout>
                    <west border="0"  collapsible="true" open="false" style="border: none;">
                        <caption vflex="1"  width="95%">
                            <include src="/pages/include/panels.zul"/>
                        </caption>

                    </west>
                    <center
                            border="2"
                            sclass="newsfeedPanel"
                            autoscroll="true" >


                        <div>
                            <vlayout>
                                <groupbox closable="true" mold="3d" form="@id('fx') @load(vm.property) @save(vm.property, before='save')" vflex="1" contentStyle="overflow:auto;">
                                    <listbox hflex="1">
                                        <listhead sizable="true">
                                            <listheader label=""/>
                                            <listheader label=""/>
                                        </listhead>
                                        <listitem>
                                            <listcell>
                                                <label value="Key"/>
                                            </listcell>
                                            <listcell>
                                                <textbox constraint="no empty"  value="@load(fx.key) @save(fx.key, before='save')"/>
                                            </listcell>
                                        </listitem>
                                        <listitem>
                                            <listcell>
                                                <label value="Description"/>
                                            </listcell>
                                            <listcell>
                                                <textbox value="@load(fx.description) @save(fx.description, before='save')" />
                                            </listcell>
                                        </listitem>
                                        <listitem>
                                            <listcell>
                                                <label value="Path"/>
                                            </listcell>
                                            <listcell>
                                                <textbox constraint="no empty" value="@load(fx.value) @save(fx.value, before='save')" />
                                            </listcell>
                                        </listitem>
                                    </listbox>
                                </groupbox>

                                <div align="center" sclass="global-footer" width="100%" vflex="min">
                                    <button label="Save Setting" onClick="@command('save')" sclass="btn-footer"/>
                                </div>
                            </vlayout>
                        </div>
                    </center>
                </borderlayout>
                <!--  -->
            </center>
            <!--  -->
        </borderlayout>
        <!--  -->
    </window>
    <!--  -->
</zk>